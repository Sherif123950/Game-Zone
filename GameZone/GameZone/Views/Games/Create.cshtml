@model CreateGameFormViewmodel
@{
   ViewData["Title"]="Create Game";
}
<h5 class="mt-4">
	<i class="bi bi-patch-plus"></i>
	Create New Game 
</h5>

<form asp-controller="Games">
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="Name" class="form-label mt-4"></label>
				<input type="text" asp-for="Name" class="form-control" placeholder="Enter Name">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CategoryId" class="form-label mt-4"></label>
				<select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
					<option>    --Select Category--    </option>
				</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SelectedDevices" class="form-label mt-4"></label>
				<select multiple="" class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices">
					<option>    --Select Devices--    </option>
				</select>
				<span asp-validation-for="SelectedDevices" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Descripiton" class="form-label mt-4"></label>
				<textarea class="form-control" asp-for="Descripiton" placeholder="Description"></textarea>
				<span asp-validation-for="Descripiton" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Cover" class="form-label mt-4"></label>
				<input class="form-control" type="file" asp-for="Cover">
				<small class="form-text text-muted">Only jpg, jpeg, png Files Are Allowed With Maximum Size 1MB. </small>
				<span asp-validation-for="Cover" class="text-danger"></span>
			</div>
			<button type="submit" class=" btn btn-success mt-4">Create</button>
		</div>
		<div class="col-md-6"></div>
	</div>
	
</form>
