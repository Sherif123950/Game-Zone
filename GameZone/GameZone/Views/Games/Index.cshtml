@model IEnumerable<Game>
@{
	ViewData["Title"] = "Games";
}
<a class="btn btn-secondary btn-lg" asp-action="Create">
	<i class="bi bi-patch-plus"></i>
	Create Game
</a>


@if (!Model.Any())
{
	<div class="alert alert-warning mt-5">
		<h4 class="alert-heading">No Games!</h4>
		<p class="mb-0">No Games Were Added Yet.</p>
	</div>
}
else
{
	<div class="mt-5">
		<table class="table table-bordered border-primary">
			<tbody>
				@foreach (var game in Model)
				{
					<tr class="border-success border-1">
						<td class="align-middle">
							<div class="d-flex">
								<div class="pe-4">
									<img src="@($"/assets/images/Games/{game.CoverName}")" style="max-width:90px; max-height:90px; " alt="@game.Name"/>
								</div>
								<div class="d-flex justify-content-center flex-column">
									<h6 class="text-light">@game.Name</h6>
									<h7>@game.Category.Name</h7>
								</div>
							</div>
						</td>
						<td class="align-middle">
							<div class="d-flex justify-content-end">
								<a asp-action="Edit" class="btn btn-info rounded rounded-3 me-2" asp-route-id="@game.Id">
									<i class="bi bi-pencil-fill"></i>
								</a>
								<a href="javascript:;" class="btn btn-danger rounded rounded-3 js-delete" data-id="@game.Id">
									<i class="bi bi-trash3"></i>
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
@section Scripts
{
	<script src="~/js/game-index.js" asp-append-version="true"></script>

}