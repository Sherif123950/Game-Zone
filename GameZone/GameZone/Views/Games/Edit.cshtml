@using GameZone.Helpers
@model EditFormViewModel
@{
	ViewData["Title"] = "Edit Game";
}
<h5 class="mt-4">
	<i class="bi bi-patch-plus"></i>
	Edit Game
</h5>

<form asp-controller="Games" enctype="multipart/form-data">
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="Name" class="form-label mt-4"></label>
				<input type="text" asp-for="Name" class="form-control" placeholder="Enter Name">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CategoryId" class="form-label mt-4"></label>
				<select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
					<option value="">    --Select Category--    </option>
				</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SelectedDevices" class="form-label mt-4"></label>
				<select multiple="" class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices">
					<option>    --Select Devices--    </option>
				</select>
				<span asp-validation-for="SelectedDevices" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Descripiton" class="form-label mt-4"></label>
				<textarea class="form-control" asp-for="Descripiton" placeholder="Description"></textarea>
				<span asp-validation-for="Descripiton" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Cover" class="form-label mt-4"></label>
				<input class="form-control" type="file" asp-for="Cover"
					   data-rule-extension="@DocumentationSettings.AllowedExtensions.Replace(".",string.Empty)"
					   data-msg-extension="Not Allowed Extension"
					   data-rule-filesize="@DocumentationSettings.FileMaximumSizeInByte"
					   data-msg-filesize="Maximum Size Of File Is @(DocumentationSettings.FileMaximumSizeInMB)MB.">
				<small class="form-text text-muted">Only @DocumentationSettings.AllowedExtensions Files Are Allowed With Maximum Size @(DocumentationSettings.FileMaximumSizeInMB)MB. </small>
				<span asp-validation-for="Cover" class="text-danger d-block"></span>
			</div>
			<button type="submit" class=" btn btn-success mt-4">Edit</button>
		</div>
		<div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
			<img alt="Cover" class="cover-preview " src="@($"/assets/images/Games/{Model.CoverName}")" />
		</div>
	</div>

</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/file-size.js" asp-append-version="true"></script>
	<script src="~/js/game-form.js" asp-append-version="true"></script>
}
